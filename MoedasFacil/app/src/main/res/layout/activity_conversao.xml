<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ConversaoActivity">

    <TextView
            android:id="@+id/textTituloConversao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConversÃ£o"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

    <View
            android:layout_width="180dp"
            android:layout_height="5dp"
            android:background="@color/colorGreenYellow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textTituloConversao"/>

    <TextView
            android:id="@+id/textTituloEscolha1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Converter:"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:layout_below="@id/textTituloConversao"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"/>

    <Spinner
            android:id="@+id/spinMoeda1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTituloConversao"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="40dp">

    </Spinner>

    <TextView
            android:id="@+id/textTituloEscolha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para:"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:layout_below="@id/textTituloEscolha1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"/>


    <Spinner
            android:id="@+id/spinMoeda2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinMoeda1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="35dp">

    </Spinner>

    <TextView
            android:id="@+id/textValorConversao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite o valor:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp"
            android:layout_below="@id/spinMoeda2"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

    <View
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:background="@color/colorGreenYellow"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/textValorConversao"
            android:layout_below="@id/textValorConversao"/>

    <EditText
            android:id="@+id/editConversao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="Valor..."
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textValorConversao"/>

    <TextView
            android:id="@+id/textTituloResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/editConversao"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>
    <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/colorGreenYellow"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/textTituloResultado"
            android:layout_below="@id/textTituloResultado"/>

    <TextView
            android:id="@+id/textResultadoConversao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 150.89"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textTituloResultado"
            android:layout_marginTop="25dp"/>

    <Button
            android:id="@+id/buttonCotacaoMoeda"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textSize="20sp"
            android:textColor="@color/colorTextButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner_button"/>

</RelativeLayout>