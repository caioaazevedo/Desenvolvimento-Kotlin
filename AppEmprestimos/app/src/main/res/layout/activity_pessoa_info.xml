<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.PessoaInfoActivity">

    <TextView
            android:id="@+id/textTituloPessoaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados da Pessoa"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="5dp"/>

    <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:layout_below="@+id/textTituloPessoaInfo"
            android:background="@drawable/rouder_corner_red"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textCampoNomeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textTituloPessoaInfo"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>

    <View
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_below="@+id/textCampoNomeInfo"
            android:background="@color/colorAccent"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textMostraNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCampoNomeInfo"
            android:text="Nome"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorDarkGrey"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textCampoTelefoneInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textMostraNome"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

    <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_below="@+id/textCampoTelefoneInfo"
            android:background="@color/colorOrange"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textMostraTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCampoTelefoneInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Telefone"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGrey"/>


    <TextView
            android:id="@+id/textCampoCepInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEP:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textMostraTelefone"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

    <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_below="@+id/textCampoCepInfo"
            android:background="@color/colorPrimary"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textMostraCep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCampoCepInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="CEP"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGrey"/>

    <TextView
            android:id="@+id/textCampoEnderecoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textMostraCep"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

    <View
            android:layout_width="110dp"
            android:layout_height="3dp"
            android:layout_below="@+id/textCampoEnderecoInfo"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textMostraEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCampoEnderecoInfo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Endereço"
            android:textSize="20sp"
            android:textColor="@color/colorDarkGrey"/>

    <Button
            android:id="@+id/buttonPessoaEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rouder_corner_red"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"/>

    <Button
            android:id="@+id/buttonPessoaDeletar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deletar"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rouder_corner_red"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="70dp"/>

</RelativeLayout>