    <TextView
            android:id="@+id/textTituloAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados do Item"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>

    <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:layout_below="@+id/textTituloAddItem"
            android:background="@drawable/rouder_corner_red"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textTituloAddImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar Imagem:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textTituloAddItem"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/textTituloAddImagem"
            android:layout_marginTop="25dp"
            android:src="@drawable/images_default"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textTituloNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:id="@+id/editNome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTituloNome"
            android:layout_marginTop="10dp"
