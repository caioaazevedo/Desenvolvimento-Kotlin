<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AddItemActivity"
        android:background="@color/colorCream">

    <TextView
            android:id="@+id/textTituloAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados do Item"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>

    <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:layout_below="@+id/textTituloAddItem"
            android:background="@drawable/rouder_corner_red"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/textTituloAddImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imagem:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textTituloAddItem"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/textTituloAddImagem"
            android:layout_marginTop="5dp"
            android:src="@drawable/images_default"
            android:layout_marginLeft="20dp"/>

    <Button
            android:id="@+id/btnImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:text="Alterar"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:background="@drawable/rouder_corner_red"
            android:padding="10dp"
            android:layout_marginLeft="30dp"/>

    <TextView
            android:id="@+id/textTituloNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textTituloAddImagem"
            android:text="*Nome:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:layout_marginTop="20dp"/>

    <EditText
            android:id="@+id/editNome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTituloNome"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>


    <TextView
            android:id="@+id/textTituloInicioEmprestimo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editNome"
            android:text="*Inicio do Período de Emprestimo:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

    <TextView
            android:id="@+id/textInicioEmprestimo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="21/12/2018"
            android:textSize="20dp"
            android:textColor="@color/colorDarkGrey"
            android:layout_below="@+id/textTituloInicioEmprestimo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/textTituloTerminoEmprestimo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnImagem"
            android:text="*Termino do Período de Emprestimo:"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

    <TextView
            android:id="@+id/textTerminoEmprestimo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="21/12/2018"
            android:textSize="20dp"
            android:textColor="@color/colorDarkGrey"
            android:layout_below="@+id/textTituloTerminoEmprestimo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

    <Button
            android:id="@+id/buttonAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/textTerminoEmprestimo"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rouder_corner_dark"
            android:padding="10dp"/>

</RelativeLayout>